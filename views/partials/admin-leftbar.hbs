<div class="col-2">
  <div class="left-bar fix-bar" style="height: 100%;">
    <div class="left-bar-content">
      <div class="ac-icon mt-2 mb-4">
        <img class="ac-img" width="50px" , height="50px" src="/images/AC-icon@2x.png" alt="AC icon">
      </div>
      <div class="home left-bar-margin">
        <a href="/admin/tweets">
          {{#ifNotCond route "tweets"}}
          <img class="left-bar-icon" src="/images/home-outlined@2x.png" alt="home">
          <span class="word">推文清單</span>
          {{/ifNotCond}}
          {{#ifCond route "tweets"}}
          <img class="left-bar-icon" src="/images/home-orange@2x.png" class="base-icon">
          <span class="word" style="color: #FF6600;">推文清單</span>
          {{/ifCond}}
        </a>
      </div>

      <div class="personal-info left-bar-margin">
        <a href="/admin/users">
          {{#ifNotCond route "profile"}}
          <img class="left-bar-icon" src="/images/user-outlined@2x.png" alt="home">
          <span class="word">使用者列表</span>
          {{/ifNotCond}}
          {{#ifCond route "profile"}}
          <img class="left-bar-icon" src="/images/user-orange@2x.png" class="base-icon">
          <span class="word" style="color: #FF6600;">使用者列表</span>
          {{/ifCond}}
        </a>
      </div>



      <div class="logout">
        <img class="left-bar-icon" src="/images/logout@2x.png" alt="logout">
        <a href="/logout">
          <span class="word"><strong>登出</strong></span>
        </a>
      </div>
    </div>
  </div>
</div>