<div class="col-2">
  <div class="left-bar fix-bar" style="height: 100%;">
    <div class="left-bar-content" >
      <div class="ac-icon mt-2 mb-4">
        <img class="ac-img" width="50px" , height="50px" src="/images/AC-icon@2x.png" alt="AC icon">
      </div>
      <div class="home mb-3">
        <a href="/tweets">
          <h5 style="color:{{#ifCond route 'tweets'}}#FF6600;{{else}}black{{/ifCond}}">
            <img class="left-bar-icon" src="/images/home-outlined@2x.png" alt="home">
            首頁
          </h5>
        </a>
      </div>

      <div class="personal-info mb-3">
        <a href="/users/{{user.id}}">
          <h5 style="color:{{#ifCond route 'profile'}}#FF6600;{{else}}black{{/ifCond}}">
            <img class="left-bar-icon" src="/images/user-outlined@2x.png" alt="user">
            個人資料
          </h5>
        </a>
      </div>

      <div class="personal-info-setting mb-3">
        
        <a href="/edit">
            <h5 style="color:{{#ifCond route 'setting'}}#FF6600;{{else}}black{{/ifCond}}">
              <img class="left-bar-icon" src="/images/setting-outlined@2x.png" alt="setting">
              設定
            </h5>
        </a>
      </div>

      <div class="tweets-new-tweet">
        <button class="left-bar-tweetbtn" type="submit" data-bs-toggle="modal" data-bs-target="#user-tweet-modal">推文</button>
      </div>
      
      <div class="logout">
        <img class="left-bar-icon" src="/images/logout@2x.png" alt="logout">
        <a href="/logout">
          <span><strong>登出</strong></span>
        </a>
      </div>
    </div>
  </div>
</div>
